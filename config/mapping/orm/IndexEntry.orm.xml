<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\IndexEntry" table="index_entry">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="type" type="string" length="64"/>
        <field name="topic" type="string" length="64"/>
        <field name="phrase" type="text"/>
        <many-to-one field="correction" target-entity="Correction" inversed-by="indexEntries">
            <join-column name="correction_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>