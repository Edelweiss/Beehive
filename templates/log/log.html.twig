{% extends 'base.html.twig' %}

{% block body %}

  <h3>Liste der gelöschten Korrekturen</h3>
  <span>Zeige die {{ limit }} letzten gelöschten Korrekturen von insg. {{ count }} gelöschten Korrekturen</span>
  <table>
  <tr>
    <th>Löschdatum</th>
    <th>Benutzer</th>
    <th>Version</th>
    <th>Daten</th>
  </tr>
    {% for log in logs %}
        <tr id = '{{ log.id }}'>
            <td>{{ log.loggedAt|date("d.m.Y") }}</td>
            <td>{{ log.username }}</td>
            <td>V. {{ log.version }}</td>
            <td>
                <ul>
                    {% for key,value in log.data %}
                        <li>{{ key }} →  {% if key == 'cleared' %}
                        {{ value|date('d.m.Y') }}
                        {% else %}
                        {{ value }}
                        {% endif %} </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
    {% endfor %}
</table>

{% endblock %}
