{% set edition = '' %}
{% set text = '' %}

<div class="apiary">
  {% for c in corrections %}
    {% if c.edition.title != edition %}
      <h4 {{ c.edition.title != edition ? 'id=e' ~ c.edition.sort : '' }} class="edition">
        {{ c.edition.title }}
        {% set edition = c.edition.title %}
        {% set text = '' %}
      </h4>

      {% for d in c.edition.docketEntries %}
      <div class="docket">
        {% if d.position or d.text %}
          <div class="text">{{ d.text }}</div>
          <div class="position">{{ c.position }}</div>
          <div class="info">{{ d.info }}</div>
        {% else %}
          <p class="info">{{ d.info }}</p>
        {% endif %}
      </div>
      {% endfor %}
    {% endif %}
    <div class="correction">
        <div class="text">
          {% if c.text != text %}
            {% if c.registerEntries|length and c.registerEntries|first %}
              <a href="{{ path('PapyrillioBeehive_ApiaryHoney', {'type': 'register', 'id': c.registerEntries|first.id }) }}" title="Alle Einträge für {{ c.registerEntries|first }}">{{ c.text }}</a>
            {% else %}
              {{ c.text }}
            {% endif %}
            {% set text = c.text %}
          {% endif %}
        </div>
        <div class="position">{{ c.position }}</div>
        <div class="description">{{ c.description }}</div>
        <div class="bl">
          <a href="{{ path('PapyrillioBeehive_CorrectionShow', {'id': c.id}) }}" title="BL&nbsp;{{ c.compilation.title }}{% if c.compilationPage %}&nbsp;S.&nbsp;{{ c.compilationPage }}{% endif %}{% if c.compilationIndex %}&nbsp;#&nbsp;{{ c.compilationIndex }}{% endif %}">BL&nbsp;{{ c.compilation.title }}{% if c.compilationPage %}&nbsp;S.&nbsp;{{ c.compilationPage }}{% endif %}{% if c.compilationIndex %}&nbsp;#&nbsp;{{ c.compilationIndex }}{% endif %}</a>
          <br />
          {% if c.source %}
            <a href="http://papyri.info/biblio/{{ c.source }}">Biblio</a>
          {% endif %}
        </div>
    </div>
  {% endfor %}
</div>

