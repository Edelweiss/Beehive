<form id="indexEntryAssignmentsParameterControl" autocomplete="off">
<p>
  <select id="compilationId" name="compilationid">
    {% for compilation in compilationList %}

      <option value="{{ compilation.id }}" {{ compilation.id == compilationId ? 'selected="selected"' : '' }}>{{ compilation.short }}</option>

    {% endfor %}
  </select>

  <select id="type" name="type">
    {% for typeTitle in ['Neues Wort', 'Ghostword'] %}
      <option value="{{ typeTitle }}" {{ typeTitle == type ? 'selected="selected"' : '' }}>{{ typeTitle }}</option>
    {% endfor %}
  </select>

  <select id="topic" name="topic">
    {% for topicTitle in topicList %}
      <option value="{{ topicTitle }}" {{ topicTitle == topic ? 'selected="selected"' : '' }}>{{ topicTitle }}</option>
    {% endfor %}
  </select>

  <br/>

  <label for="topic">Suchbegriff:</label>
  <input id="search" name="search" type="text" value="{{ search != '_' ? search : '' }}"/>

  <label for="topic">Seite:</label>
  <input id="page" name="page" type="text" value="{{ page }}"/>

  <input type="submit" value="Daten laden" onClick="window.location = '{{ path('PapyrillioBeehive_IndexEntryManageAssignments', {}) }}' + '/' + $('#compilationId').val() + '/' + $('#type').val() + '/' + $('#topic').val() + '/' + (!$('#search').val() && $('#page').val() ? '_' : $('#search').val()) + '/' + $('#page').val(); return false;"/>
</p>
</form>