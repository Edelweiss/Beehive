{% include 'PapyrillioBeehiveBundle:Task:task.html.twig' with {'task': task} %}
<script type="text/javascript">

    $('.editTask').editable('{{ path('PapyrillioBeehiveBundle_taskupdate', {'id': 0}) }}', {
      id   : 'elementid_raw',
      name : 'newvalue',
      type: 'textarea',
      cancel: 'Cancel',
      submit: 'OK',
      rows: 2,
      cols: 100,
      submitdata: function(value, settings){
        return editTask_submitdata(this, value, settings);
      },
      indicator : 'Speichert...',
      tooltip   : 'Klicken zum Editieren...',
      placeholder: '________',
      style: 'inherit',
      cssclass: 'greek'
    });

    $('.editTaskSelect').editable('{{ path('PapyrillioBeehiveBundle_taskupdate', {'id': 0}) }}', {
      id   : 'elementid_raw',
      name : 'newvalue',
      submitdata: function(value, settings){
        return editTask_submitdata(this, value, settings);
      },
      indicator : 'Speichert...',
      tooltip   : 'Klicken zum Editieren...',
      type: 'select',
      data: {'✔': '✔', '✘': '✘'},
      style: 'inherit',
      submit: 'OK'
    });
    
    $('.deleteTask').click(function(event){
      deleteTask_click(this, event, '{{ path('PapyrillioBeehiveBundle_taskdelete', {'id': 0}) }}');
    });

</script>