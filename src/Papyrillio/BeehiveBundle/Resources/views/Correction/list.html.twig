{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/jquery/ui.jqgrid.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}

  <h3>Liste der Korrekturen</h3>
  
  <table id="list"></table>
  <div id="pager"></div>
  
  {# for c in corrections %}
    {{ c.id }}
  {% endfor #}

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/jquery/i18n/grid.locale-de.js') }}" type="text/javascript"></script>
  <script src="{{ asset('js/jquery/jquery-jqGrid.min.js') }}" type="text/javascript"></script>
  <script type="text/javascript">
  
$(function(){
  $("#list").jqGrid({
    url: '{{ path('PapyrillioBeehiveBundle_correctionlist') }}',
    datatype: 'xml',
    mtype: 'POST',
    colNames:['Band', 'BL', 'TM', 'HGV', 'DDB', 'Titel', 'Position', 'Beschreibung', 'BL', 'TM', 'HGV', 'DDB', 'APIS'],
    colModel :[ 
      {name:'compilation', index:'compilation_id', width:32, resizable: false, sortable: false},
      {name:'bl',          index:'bl',             width:55},
      {name:'tm',          index:'tm',             width:55},
      {name:'hgv',         index:'hgv',            width:55},
      {name:'ddb',         index:'ddb',            width:55},
      {name:'titel',       index:'ddb',          width:100},
      {name:'position',    index:'position',       width:150},
      {name:'description', index:'description',    width:250},
      {name:'task_bl',     index:'task_bl',        width:28, align: 'center', classes: 'keyword', resizable: false, sortable: false},
      {name:'task_tm',     index:'task_tm',        width:28, align: 'center', classes: 'keyword', resizable: false, sortable: false},
      {name:'task_hgv',    index:'task_hgv',       width:28, align: 'center', classes: 'keyword', resizable: false, sortable: false},
      {name:'task_ddb',    index:'task_ddb',       width:28, align: 'center', classes: 'keyword', resizable: false, sortable: false},
      {name:'task_apis',   index:'task_apis',      width:28, align: 'center', classes: 'keyword', resizable: false, sortable: false} 
    ],
    pager: '#pager',
    rowNum:10,
    rowList:[10,20,50,100],
    sortname: 'bl',
    sortorder: 'desc',
    viewrecords: true,
    gridview: true,
    caption: 'Liste der Korrekturen'});
  }); 
  
  
  
  </script>
{% endblock %}
