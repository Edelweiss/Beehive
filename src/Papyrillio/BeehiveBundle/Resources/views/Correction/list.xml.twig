<?xml version ="1.0" encoding="utf-8"?>
<rows>
  <page>{{ page }}</page>
  <total>{{ totalPages }}</total>
  <records>{{ count }}</records>
  {% for correction in corrections %}
    <row id = '{{ correction.id }}'>
      <cell>{{ correction.compilation.title }}</cell>
      <cell>{{ correction.tm }}</cell>
      <cell>{{ correction.hgv }}</cell>
      <cell>{{ correction.ddb }}</cell>
      <cell>{{ correction.source }}</cell>
      <cell><![CDATA[<a href="{{ path('PapyrillioBeehiveBundle_correctionshow', {'id': correction.id}) }}">{{ correction.edition.sort }}={{ correction.edition.title }}</a>]]></cell>
      <cell>{{ correction.text }}</cell>
      <cell>{{ correction.position }}</cell>
      <cell>{{ correction.description }}</cell>
      <cell>{{ correction.hasTask('bl')     ? (correction.hasOpenTask('bl')     ? '✘' : '✔') : '' }}</cell>
      <cell>{{ correction.hasTask('tm')     ? (correction.hasOpenTask('tm')     ? '✘' : '✔') : '' }}</cell>
      <cell>{{ correction.hasTask('hgv')    ? (correction.hasOpenTask('hgv')    ? '✘' : '✔') : '' }}</cell>
      <cell>{{ correction.hasTask('ddb')    ? (correction.hasOpenTask('ddb')    ? '✘' : '✔') : '' }}</cell>
      <cell>{{ correction.hasTask('apis')   ? (correction.hasOpenTask('apis')   ? '✘' : '✔') : '' }}</cell>
      <cell>{{ correction.hasTask('bilbio') ? (correction.hasOpenTask('bilbio') ? '✘' : '✔') : '' }}</cell>
    </row>
  {% endfor %}
</rows>