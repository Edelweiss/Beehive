{% extends '::base.html.twig' %}

{% block body %}

  <h3>Einträge für Berichtigungsliste {{ compilation.title }}</h3>

    {% for edition in editions %}
      <h4 class="print greekSerif" title="{{ edition[0].edition.sort }}">{{ edition[0].edition.title }}</h4>
      <table class="print">
				{% for correction in edition %}
					<tr>
						{% if correction.edition.sort in [580000, 581000, 582000, 1250000] %}
              <td class="page greekSerif">{{ correction.page ? 'S. ' ~ correction.page : ''}}</td>
              <td class="text greekSerif">{{ correction.sortText }}</td>
						{% else %}
						  <td class="text greekSerif">{{ correction.text }}</td>
						{% endif %}
						<td class="position greekSerif">{{ correction.position }}</td>
						<td class="description greekSerif">{{ correction.description }}</td>
					</tr>
				{% endfor %}
      </table>
    {% endfor %}

  <p class="actionHolder"><span id="print">Drucken</span></p>
  <ul class="noPrint">
    <li><a href="{{ path('PapyrillioBeehiveBundle_reportprint', {'compilationVolume': compilation.volume, 'editionId': 569}) }}">O. Tait 1</a></li>
    <li><a href="{{ path('PapyrillioBeehiveBundle_reportprint', {'compilationVolume': compilation.volume, 'editionId': 253}) }}">P. Lond. 1</a></li>
    <li><a href="{{ path('PapyrillioBeehiveBundle_reportprint', {'compilationVolume': compilation.volume, 'editionId': 254}) }}">P. Lond. 2</a></li>
    <li><a href="{{ path('PapyrillioBeehiveBundle_reportprint', {'compilationVolume': compilation.volume, 'editionId': 255}) }}">P. Lond. 3</a></li>
    <li><a href="{{ path('PapyrillioBeehiveBundle_reportprint', {'compilationVolume': compilation.volume, 'editionId': 9}) }}">P.Ammon</a></li>
  </ul>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  
  <script src="{{ asset('js/jquery/jquery-jeditable.min.js') }}" type="text/javascript"></script>

  <script type="text/javascript">
    $(function(){
      $('span#print').click(function(event){window.print();});
    });
  </script>

{% endblock %}