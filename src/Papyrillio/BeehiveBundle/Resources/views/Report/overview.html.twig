{% extends '::base.html.twig' %}

{% block body %}

  <h3>Verfügbare Editionen für BL {{ compilation.title }}</h3>

    <ul>
    {% for edition in editions %}
      
      <li>
        {{ edition[0].edition.title }} = {{ edition[0].edition.codeTitle }}
        [<a href="{{ path('PapyrillioBeehiveBundle_reportprint', {'compilationVolume': compilation.volume, 'editionId': edition[0].edition.id}) }}">PRINT</a>]
        [<a href="{{ path('PapyrillioBeehiveBundle_reportpdf', {'compilationVolume': compilation.volume, 'editionId': edition[0].edition.id}) }}">PDF</a>]
      </li>
      
    {% endfor %}
    </ul>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  
  <script src="{{ asset('js/jquery/jquery-jeditable.min.js') }}" type="text/javascript"></script>

  <script type="text/javascript">
    $(function(){
      $('span#print').click(function(event){window.print();});
    });
  </script>

{% endblock %}