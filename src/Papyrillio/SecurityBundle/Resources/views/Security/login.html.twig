{% extends '::base.html.twig' %}

{% block body %}

{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form id="login" action="{{ path('login_check') }}" method="post">
    <label for="username">Name:</label>
    <input class="data" type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">Passwort:</label>
    <input class="data" type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <input class="submit" type="submit" name="login" />
</form>

{% endblock %}